<p>
  <h1><strong>Question:</strong></h1>
  <%= @question.text %>
</p>
<h2>Answer</h2>
<%= render @question.answers %>
<h2>Add a answer:</h2>
<%= render 'answers/form' %>
<%= link_to 'Back', questions_path %>
<%if @user && @user.has_role?(:admin) %>
<%= link_to 'Edit', edit_question_path(@question) %>
<% end %>